<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/diceActivityLayout"
    android:orientation="vertical"
    tools:context=".View.DiceActivity">

    <LinearLayout
        android:id="@+id/layoutOfRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffe000"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/diceActivityLayout1">

        <ImageView
            android:id="@+id/imgDice1"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="50"
            android:src="@drawable/kismet_ace" />

        <ImageView
            android:id="@+id/imgDice2"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="50"
            android:src="@drawable/kismet_deuce" />

        <ImageView
            android:id="@+id/imgDice3"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="50"
            android:src="@drawable/kismet_trey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/diceActivityLayout2">


        <ImageView
            android:id="@+id/imgDice4"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="50"
            android:src="@drawable/kismet_ace" />

        <ImageView
            android:id="@+id/imgDice5"
            android:layout_width="0dp"
            android:layout_height="111dp"
            android:layout_weight="50"
            android:src="@drawable/kismet_deuce" />

        <ImageView
            android:id="@+id/imgDice6"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="50"
            android:src="@drawable/kismet_trey" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/diceActivityLayout3">

        <ImageView
            android:id="@+id/imgDice7"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="50"
            android:src="@drawable/kismet_ace" />

        <ImageView
            android:id="@+id/imgDice8"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="50"
            android:src="@drawable/kismet_deuce" />

        <ImageView
            android:id="@+id/imgDice9"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="50"
            android:src="@drawable/kismet_trey" />


    </LinearLayout>

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/ic_settings" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutOfButtonAndSettings"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="#ffe000">


        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/tap_to_play_image_3"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>